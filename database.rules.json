{
  "rules": {
    "users": {
      ".read": "true",
      "$uid": {
        ".read": "true",
        ".write": "($uid === auth.uid && auth != null) || $uid.matches(/^ai_.*/)"
      }
    },
    "conversations": {
      "$conversationId": {
        ".read": "auth != null && data.child('participants').child(auth.uid).exists()",
        ".write": "auth != null && ((!data.exists() && newData.child('participants').child(auth.uid).exists()) || (data.exists() && data.child('participants').child(auth.uid).exists()))",
        "messages": {
          "$messageId": {
            ".write": "auth != null && data.parent().parent().child('participants').child(auth.uid).exists()",
            "reactions": {
              "$uid": {
                ".write": "auth != null && $uid === auth.uid && data.parent().parent().parent().parent().child('participants').child(auth.uid).exists()"
              }
            }
          }
        }
      }
    },
    "user-conversations": {
      "$uid": {
        ".read": "auth != null && $uid === auth.uid",
        "$conversationId": {
          ".write": "auth != null && newData.parent().parent().parent().child('conversations').child($conversationId).child('participants').child(auth.uid).exists()"
        }
      }
    }
  }
}